<div class="reviews-page page-body page-content">
  <div class="row">
  
    {% if tariff_expired_block %}
        {{ tariff_expired_block }}
    {% endif %}
    
    {% for review in reviews %}
    
        {% set bg_class = ''%}
        {% if review.rating == 3 %}
            {% set bg_class = 'yellow-bg' %}
        {% elseif review.rating == 4 %}
            {% set bg_class = 'red-bg' %}
        {% elseif review.rating == 5 %}
            {% set bg_class = 'green-bg' %}
        {% endif %}
        
        <div class="col-xl-4 col-lg-6 col-md-6 review-wrap">
        
          <div id="review_{{ review.id }}" class="review-card {{ bg_class }} {% if review.expired %} expired {% endif %}">
          
            {% if review.expired %}
                <div class="expired-text">
                    <span>
                        {{ text_expired_pay }}
                    </span>
                </div>
            {% endif %}
            
            <div class="deleted-text">
                <span>
                    <button class="site-btn" onclick="setReviewStatus({{ review.id }}, 1)">{{ text_recover }}</button>
                </span>
            </div>

            <div class="review-header">
              
              {% if review.expired %}
                  <div class="menu-review hide">
                  </div>
              {% else %}
