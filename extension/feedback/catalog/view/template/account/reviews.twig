                      {% if review.status == '1' %}
                          <div class="selectBtn" data-type="firstOption">{{ text_new_one }}</div>
                      {% endif %}
                      {% if review.status == '2' %}
                          <div class="selectBtn" data-type="firstOption">{{ text_solved_one }}</div>
                      {% endif %}
                      <div class="selectDropdown">
                          <div class="option" data-review-id="{{ review.id }}" data-status="1" data-type="{{ text_new_one }}">{{ text_to_return }}</div>
                          <div class="option" data-review-id="{{ review.id }}" data-status="2" data-type="{{ text_solved_one }}">{{ text_to_solve }}</div>
                      </div>
                  </div>
                  
